@page "/resume"
@using ResumeApp.Components.Resume
@inject HttpClient Http

@if (ResumeData == null)
{
    <PageTitle>Resume is loading...</PageTitle>
    <a class="loader little-padding" role="status">
        <span class="tiny no-opacity">Loading...</span>
    </a>
}
else
{
    <article class="primary-container">
        <PageTitle>Resume of @ResumeData.Basics.Name</PageTitle>
        <ResumeBasics Basics="ResumeData.Basics" />
        <article>
            <details>
                <summary class="none">
                    <div class="row">
                        <i>school</i>
                        <div class="max">
                            <h5>Education</h5>
                        </div>
                        <i class="right">arrow_drop_down</i>
                    </div>
                </summary>
                <div>
                    @foreach (var education in ResumeData.Education)
                    {
                        <ResumeEducation Education="education" />
                    }
                </div>
            </details>
        </article>
        @if (ResumeData.Certificates != null)
        {
            <article>
            <details>
                <summary class="none">
                    <div class="row">
                        <i>certificate</i>
                        <div class="max">
                            <h5>Certifications</h5>
                        </div>
                        <i class="right">arrow_drop_down</i>
                    </div>
                </summary>
                <div>
                    @foreach (var certification in ResumeData.Certificates)
                    {
                        <ResumeCertification Certification="certification" />
                    }
                </div>
            </details>
        </article>
        }
    else
    {
        <!-- Certifications are not available -->
    }
    @if (ResumeData.Languages != null)
    {
        article>
            <details>
                <summary class="none">
                    <div class="row">
                        <i>language</i>
                        <div class="max">
                            <h5>Languages</h5>
                        </div>
                        <i class="right">arrow_drop_down</i>
                    </div>
                </summary>
                <div>
                    @foreach (var language in ResumeData.Languages)
                    {
                        <ResumeLanguages Language="language" />
                    }
                </div>
            </details>
        </article>
    }
    else {
    <!-- Languages not available -->
    }
    </article>
}
@code {
    public ResumeModel? ResumeData { get; set; }
    
    protected override async Task OnInitializedAsync()
    {
        ResumeData = await Http.GetFromJsonAsync<ResumeModel>("data/resume.json");
    }
}
